<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.CreateAccountPageController"
      prefHeight="400.0" prefWidth="600.0">

    <fx:include source="reusable/topBar-reusable.fxml" />

    <StackPane onKeyPressed="#handleEnterPressed" VBox.vgrow="ALWAYS">

        <HBox alignment="CENTER"
              spacing="10"
              maxWidth="Infinity" maxHeight="Infinity" style="-fx-padding: 20; -fx-border-color: #cccccc; -fx-border-radius: 6; -fx-background-radius: 6;">
            <VBox alignment="CENTER_LEFT" spacing="5">
                <VBox spacing="2"> <Label text="nome completo"/>
                    <TextField fx:id="cAccNameField" prefWidth="250"/> <Label fx:id="cAccNameError" style="-fx-text-fill: red;" managed="false" visible="false"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="email"/>
                    <TextField fx:id="cAccEmailField" prefWidth="250"/>
                    <Label fx:id="cAccEmailError" style="-fx-text-fill: red;" managed="false" visible="false"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="data de nascimento"/>
                    <TextField fx:id="cAccBirthField" prefWidth="250"/>
                    <Label fx:id="cAccBirthError" style="-fx-text-fill: red;" managed="false" visible="false"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="cpf"/>
                    <TextField fx:id="cAccCpfField" prefWidth="250"/>
                    <Label fx:id="cAccCpfError" style="-fx-text-fill: red;" managed="false" visible="false"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="senha"/>
                    <PasswordField fx:id="cAccPasswordField" prefWidth="250"/> <Label fx:id="cAccPasswordError" style="-fx-text-fill: red;" managed="false" visible="false"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="confirmação de senha"/>
                    <PasswordField fx:id="cAccConfirmPasswordField" prefWidth="250"/> <Label fx:id="cAccConfirmPasswordError" style="-fx-text-fill: red;" managed="false" visible="false"/>
                </VBox>
                <Button text="Criar Conta" onAction="#submitForm" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15;"/>
            </VBox>
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"/>
        </HBox>
    </StackPane>
</VBox>