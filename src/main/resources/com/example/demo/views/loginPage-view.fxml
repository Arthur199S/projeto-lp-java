<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.LoginPageController">

    <fx:include source="reusable/topBar-reusable.fxml" />

    <StackPane alignment="CENTER" VBox.vgrow="ALWAYS" onKeyPressed="#handleEnterPressed">

        <VBox fx:id="centerLoginBox"
              alignment="CENTER"
              spacing="20"
              maxWidth="300"
              prefWidth="300"
              style="-fx-background-color: #ff8e8e; -fx-padding: 25; -fx-border-color: #cccccc; -fx-border-radius: 6; -fx-background-radius: 6;">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="OlÃ¡, seja bem-vindo!" />

            <VBox alignment="CENTER" spacing="5"> <Label text="CPF" />
                <TextField fx:id="cpfTextField" promptText="999.999.999-99" prefWidth="250"/> </VBox>

            <VBox fx:id="passwordContainer" alignment="CENTER" managed="false" spacing="5" visible="false"> <Label text="Digite sua senha:" />
                <TextField fx:id="passwordTextField" promptText="Senha" prefWidth="250"/> </VBox>

            <Button fx:id="cpfLoginButton" onAction="#handleLoginButtonClick" text="Acessar" prefWidth="250" prefHeight="35">
                <VBox.margin>
                    <Insets top="10.0" /> </VBox.margin>
            </Button>
        </VBox>
    </StackPane>
</VBox>