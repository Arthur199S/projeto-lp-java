<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="600.0" prefWidth="900.0" spacing="10" alignment="TOP_CENTER">

    <!-- Top Menu Bar (Logo + Label + Menu) -->
    <HBox prefHeight="80" alignment="CENTER" spacing="20" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <ImageView fitHeight="58.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true"/>

        <Label text="Banco CVETTI">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <MenuBar>
            <menus>
                <Menu text="Ajuda">
                    <items>
                        <MenuItem text="Close" />
                    </items>
                </Menu>
                <Menu text="Sobre">
                    <items>
                        <MenuItem text="Delete" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </HBox>

    <!-- Centered Buttons -->
    <GridPane VBox.vgrow="ALWAYS" alignment="CENTER" hgap="50" vgap="50">
        <Button text="Conta" GridPane.rowIndex="0" GridPane.columnIndex="0" prefHeight="100" prefWidth="300"/>
        <Button text="Transação" GridPane.rowIndex="0" GridPane.columnIndex="1" prefHeight="100" prefWidth="300"/>
        <Button text="Bottom Left" GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="100" prefWidth="300"/>
        <Button text="Bottom Right" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="100" prefWidth="300"/>
    </GridPane>

</VBox>