<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!-- Changed from VBox to HBox since you only have one row of content -->
<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.TopBarController"
      prefHeight="80" alignment="CENTER" spacing="20">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <ImageView fitHeight="58.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true"/>

    <Label text="Banco CVETTI">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>

    <MenuBar>
        <menus>
            <Menu text="Ajuda">
                <items>
                    <MenuItem text="Close" />
                </items>
            </Menu>
            <Menu text="Sobre">
                <items>
                    <MenuItem text="Delete" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
</HBox>